{% extends '::base.html.twig' %}

{% block content %}
<h2 class="blue">Upload a document</h2>
<div>
    <form class="form-horizontal" action="{{ path('openview_treerepo_uploadform') }}" method="post" {{ form_enctype(form) }} role="form">
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right">{{ 'form.upload.file' | trans }}</label>
            <div class="col-sm-9">
                {{ form_widget(form.upload, { 'attr': {'class': 'col-xs-10 col-sm-5'} }) }}
            </div>
        </div>
        {{ form_rest(form) }}
        <div class="clearfix form-group">
            <div class="col-md-offset-3 col-md-9">
                <button type="submit" class="btn btn-success">
                    <i class="icon-ok bigger-110"></i> {{ 'form.upload.submit' | trans }}
                </button>
            </div>
        </div>
    </form>
</div>
{% endblock %}

